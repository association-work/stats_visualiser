{% extends 'base.html.twig' %}

{% block title %}Résultat de l'import{% endblock %}

{% block body %}
<div class="bg-white shadow-lg rounded-lg p-8 max-w-3xl mx-auto">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Résultat de l'import {% if type is defined %}({{ type|capitalize }}){% endif %}</h2>
    
    {% if success %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            <p class="font-medium">L'importation a réussi !</p>
            <p>{{ count }} éléments ont été importés{% if totalItems is defined %} sur un total de {{ totalItems }} éléments extraits{% endif %}.</p>
        </div>
    {% else %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            <p class="font-medium">L'importation a échoué.</p>
            
            {% if error is defined %}
                <p class="mt-2"><strong>Erreur:</strong> {{ error }}</p>
            {% endif %}
            
            {% if errors is defined and errors|length > 0 %}
                <div class="mt-4">
                    <h3 class="font-medium mb-2">Erreurs détectées:</h3>
                    <ul class="list-disc pl-5">
                        {% for error in errors %}
                            <li>{{ error }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
        </div>
    {% endif %}
    
    <div class="mt-6">
        <a href="{{ path('app_import') }}" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Retour à la page d'import
        </a>
    </div>
</div>
{% endblock %}