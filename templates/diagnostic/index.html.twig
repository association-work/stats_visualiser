{% extends 'base.html.twig' %}

{% block title %}Diagnostic des données{% endblock %}

{% block body %}
    <div class="bg-white shadow-lg rounded-lg p-8 max-w-full mx-auto">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Diagnostic des données</h2>
        
        <div class="mb-6 grid grid-cols-2 gap-4">
            <div class="bg-gray-100 p-4 rounded-lg">
                <h3 class="text-xl font-medium mb-2">Nombre de thèmes</h3>
                <p class="text-3xl font-bold">{{ themeCount }}</p>
            </div>
            
            <div class="bg-gray-100 p-4 rounded-lg">
                <h3 class="text-xl font-medium mb-2">Nombre de valeurs</h3>
                <p class="text-3xl font-bold">{{ valueCount }}</p>
            </div>
        </div>
        
        <h3 class="text-xl font-semibold mb-4">Échantillon de thèmes et leurs valeurs</h3>
        
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">External ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nb valeurs</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Détails</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for item in sampleData %}
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ item.id }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ item.name }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ item.externalId }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {% if item.valueCount > 0 %}
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                        {{ item.valueCount }}
                                    </span>
                                {% else %}
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                        0
                                    </span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-900">
                                {% if item.valueDetails|length > 0 %}
                                    <div class="grid grid-cols-3 gap-2">
                                        {% for val in item.valueDetails %}
                                            <div class="bg-gray-100 p-1 rounded text-xs">
                                                {{ val.year }}: {{ val.value }}
                                            </div>
                                        {% endfor %}
                                        {% if item.valueCount > 5 %}
                                            <div class="text-gray-500 text-xs">+ {{ item.valueCount - 5 }} autres...</div>
                                        {% endif %}
                                    </div>
                                {% else %}
                                    <span class="text-red-500">Aucune valeur</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}