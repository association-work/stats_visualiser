generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model topic {
  id         String  @id @db.Uuid()
  name       String  @db.VarChar()
  externalId String  @unique @db.VarChar()
  parentId   String? @db.Uuid()
  unit       String
  sourceName String
  sourceUrl  String

  parent   topic?  @relation("TopicParent", fields: [parentId], references: [id])
  children topic[] @relation("TopicParent")
  values   value[]
}

model year {
  id   Int @id @default(autoincrement())
  year Int @db.SmallInt()

  values value[]
}

model location {
  id         Int    @id @default(autoincrement())
  name       String @db.VarChar()
  externalId String @unique @db.VarChar()
  parentId   Int?

  parent   location?  @relation("LocationParent", fields: [parentId], references: [id])
  children location[] @relation("LocationParent")
  values   value[]
}

model value {
  topicId    String  @db.Uuid()
  yearId     Int
  locationId Int
  value      Decimal @db.Decimal()

  year     year     @relation(fields: [yearId], references: [id])
  topic    topic    @relation(fields: [topicId], references: [id])
  location location @relation(fields: [locationId], references: [id])

  @@id([topicId, yearId, locationId])
}
